<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!email) { %>
      <form class="form-inline d-flex justify-content-right" action="/login" method="GET">
        <label for="logout" style="padding: 5px;">Please Login or Register</label>
        <button type="submit" class="btn btn-outline-light" name="logout">Login</button>
      </form>
      <form class="form-inline d-flex justify-content-right" action="/register" method="GET">
        <button type="submit" class="btn btn-outline-light" name="logout" style="margin-left: 5px;">Register</button>
      </form>
    <% } else { %>
      <form class="form-inline d-flex justify-content-right" action="/logout" method="POST">
        <label for="logout" style="padding: 5px;">Welcome Back <%= email %></label>
        <button type="submit" class="btn btn-outline-light" name="logout">Logout</button>
      </form>
    <% } %>
  </nav>
</header>